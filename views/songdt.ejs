<%- include('partials/navbar.ejs') %>

<link rel="stylesheet" href="/css/favorite.css">

<div class="m-6 ml-52 mt-36 ">

  <div class="flex">
    <img class="dailyimg mr-6 rounded-lg" src="<%= song.cover %>">
    <div class="flex flex-col justify-center">
      <!-- content -->
      <h4 class="mt-0 mb-2 ml-2 uppercase text-gray-500 tracking-widest text-xl">Song Name :</h4>
      <h1 class="mt-0 mb-2 text-white text-6xl"><%= song.name %></h1>
      <p class="text-white text mb-2 text-xl">artist : <%= song.artist %> </p>
      <p class="text-white text-xl">genre : <%= song.genre %> </p>
      <button class="mt-2 bg-pink-200 text-black block py-3 px-9 rounded-full text-3xl hover:bg-pink-400 hover:text-white"><a><i class="fa fa-heart-o" aria-hidden="true"></i></a>‚ù§</button>
