  <div class="flex flex-col justify-center min-h-screen py-12 bg-gray-50 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <h2 class="mt-6 text-3xl font-extrabold text-center text-gray-900 leading-9">
        Upload your song
      </h2>
    </div>
  
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="px-4 py-8 bg-white shadow sm:rounded-lg sm:px-10">
        
        <form action='/addsong' method='post' enctype="multipart/form-data">
          <div>

            <div id='profile-upload'>
                <div class="hvr-profile-img"><input type="file" name="cover" id='getval'  class="upload w180" title="Dimensions 180 X 180" id="imag"></div>
                <i class="fa fa-image"></i>
                  </div>
                  <label for="songname" class="block text-sm font-medium text-gray-700 leading-5">
                    song name
                  </label>
  
            <div class="mt-1 rounded-md shadow-sm">
              <input type="text" name="song[name]" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5 ">
            </div>
  
          </div>
  
          <div class="mt-6">
            <label for="artist" class="block text-sm font-medium text-gray-700 leading-5">
              Artist
            </label>
  
            <div class="mt-1 rounded-md shadow-sm">
              <input type="text" name="song[artist]" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5 ">
            </div>

            <div class="mt-6">
                <label for="genre" class="block text-sm font-medium text-gray-700 leading-5">
                  genre
                </label>
      
                <div class="mt-1 rounded-md shadow-sm">
                  <input type="text" name="song[genre]" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5 ">
                </div>
                <div class="mt-1 rounded-md shadow-sm">
                <input type="file"  placeholder="kuay" name="file" class="flex justify-center w-full px-4 py-2 text-lg font-medium text-white bg-gray-700 border border-transparent rounded-md hover:bg-pink-300 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
            </div>
          </div>
  
  
          <div class="mt-6">
            <span class="block w-full rounded-md shadow-sm">
              <button type="submit" class="flex justify-center w-full px-4 py-2 text-lg font-medium text-white bg-pink-300 border border-transparent rounded-md hover:bg-gray-700 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                Upload
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <script>
      document.getElementById('getval').addEventListener('change', readURL, true);
        function readURL(){
    var file = document.getElementById("getval").files[0];
    var reader = new FileReader();
    reader.onloadend = function(){
        document.getElementById('profile-upload').style.backgroundImage = "url(" + reader.result + ")";        
    }
    if(file){
        reader.readAsDataURL(file);
    }else{
    }
}
  </script>